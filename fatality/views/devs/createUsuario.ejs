<!DOCTYPE html>
<html>
<head>
    <title>Cadastro de Usu치rio</title>
    <link rel="stylesheet" type="text/css" href="/css/devs.css">
</head>
<body>
    <a href="/dev/home" class="back-button">Voltar</a>
    <div class="form-container">
        <h1 class="page-title">Cadastro de Usu치rio</h1>
        <form action="/dev/usuarios" method="post" class="input-group">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" required>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            <label for="senha">Senha:</label>
            <input type="password" id="senha" name="senha" required>
            <button type="submit" class="button-submit">Cadastrar Usu치rio</button>
        </form>
        <h2>Usu치rios Cadastrados:</h2>
        <ul>
            <% usuarios.forEach(function(usuario) { %>
                <li>
                    <%= usuario.nome %>
                    <div class="button-group">
                        <form action="/dev/usuarios/<%= usuario.id %>" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit">Remover</button>
                        </form>
                        <form action="/dev/usuarios/<%= usuario.id %>/edit" method="get">
                            <button type="submit">Editar</button>
                        </form>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>
</body>
</html>
